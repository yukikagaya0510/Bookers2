<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <header class="nav navbar navbar-inverse ">
            <div class="container">
              <div class="navbar-header navbar-left text-muted ">
                <span>Bookers</span>
              </div>
              <ul class="nav navbar-nav navbar-right" >
                <% if user_signed_in? %>
                  <li><%= link_to user_path(current_user) do %>
                    <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                    <span>Home</span>
                    <% end %></li>

                  <li><%= link_to users_path do %>
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                    <span>Users</span>
                    <% end %></li>
                  <li><%= link_to books_path do %>
                    <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
                    <span>Books</span>
                    <% end %></li>
                  <li><%= link_to destroy_user_session_path, method: :delete do %>
                    <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
                    <span>logout</span>
                    <% end %></li>

                <% else %>
                  <li><%= link_to root_path do%>
                    <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                    <span>Home</span>
                    <% end %>
                  </li>
                  <li><%= link_to home_about_path do %>
                    <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
                    <span>About</span>
                    <% end %>
                  </li>
                  <li><%= link_to new_user_registration_path do %>
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    <span>sign up</span>
                    <% end %>
                  </li>
                  <li><%= link_to new_user_session_path do %>
                    <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
                    <span>login</span>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
      </header>

    <%= yield %>
  </body>
  <footer class="footer ">
        <div class="container">
          <div class="row">
            <div class="col-xs-3 col-xs-offset-9">
              <p>CopyRight Infratop.inc</p>
            </div>
        </div>
  </footer>
</html>
