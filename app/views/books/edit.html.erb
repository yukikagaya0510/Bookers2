<% if @book.errors.any? %>
           <div id="error_explanation" class="alert alert-danger">
            <span><%= pluralize(@book.errors.count, "error") %>prohibited this obj from being saved:</span>
               <ul>
                   <% @book.errors.full_messages.each do |message| %>
                   <li><%= message %></li>
                   <% end %>
               </ul>
           </div>
          <% end %>
<div class="container col-lg-offset-3 col-lg-6">
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
     <h4>Title</h4>
     <div class="form-group">
        <label class="control-label sr-only" for="inputtitle"></label>
        <%= f.text_field :title, autofocus: true, class:"form-control", id:"inputtitle"%>
     </div>
     <h4>Opinion</h4>
     <div class="form-group">
        <label class="control-label sr-only" for="inputbody"></label>
        <%= f.text_field :body, autofocus: true, class:"form-control", id:"inputbody"%>
     </div>
  <div class="action">
  	<%= f.submit 'Update Book', class:"btn btn-lg btn-block btn-primary" %>
  </div>
  <%= link_to "Show", book_path(@book) %>
  <%= link_to "Back", books_path %>
<% end %>
</div>