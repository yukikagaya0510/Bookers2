 <h2>New book</h2>
          <%= form_for(book) do |f| %>
            <h4>Title</h4>
            <div class="form-group">
              <label class="control-label sr-only" for="inputtitle"></label>
              <%= f.text_field :title, autofocus: true, class:"form-control", id:"inputtitle"%>
            </div>
            <h4>Opinion</h4>
            <div class="form-group">
              <label class="control-label sr-only" for="inputbody"></label>
              <%= f.text_field :body, autofocus: true, class:"form-control", id:"inputbody"%>
            </div>
            <div>
            <%=f.submit 'Create Book', class:"btn btn-lg btn-block btn-primary"%>
            </div>
        <% end %>