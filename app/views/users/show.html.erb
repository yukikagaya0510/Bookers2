<div class="container">
	<p class="flash"><%= notice %></p>
    <p class="flash"><%= flash[:success] %></p>
  <div class="row">
    <div class="col-xs-3">
      <%= render 'user', user: @user %>
      <%= render 'books/book', book: @book %>

    </div>
    <div class="col-xs-9">
    	<h2>Books</h2>
    	<table class="table">
    	<thead>
    		<tr>
    			<th></th>
    			<th>title</th>
    			<th>Opinion</th>
    		</tr>
    	</thead>
    	<tbody>
    		<% @books.each do |book| %>
    		<tr>
    			<td><%= attachment_image_tag @user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %></td>
    			<td><%= link_to book.title, book_path(book.id) %></td>
    			<td><%= book.body %></td>
    		</tr>
    		<% end %>
    	</tbody>
    	</table>
    </div>
  </div>
</div>
